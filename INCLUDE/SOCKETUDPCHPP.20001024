}


int SockC::user_readn(char *ptr, int nbytes)
{
	int nleft, nread;
	nleft = nbytes;
	while (nleft > 0) {
		nread = read(fdSock, ptr, nleft);
		if (nread < 0)
			return(nread);
		else if (nread == 0)
			break;
		nleft -= nread;
		ptr += nread;
	}
	return (nbytes - nleft);
}
	
int SockC::user_writen(char *ptr, int nbytes)
{
	
	int nleft, nwritten;
	nleft = nbytes;
	while (nleft > 0) {
		nwritten = write(fdSock, ptr, nleft);
		if (nwritten <= 0)
			return(nwritten);
		nleft -= nwritten;
		ptr += nwritten;
	}
	return (nbytes - nleft);
}
	
